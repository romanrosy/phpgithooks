<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="phplint.tool" class="Module\PhpLint\Service\PhpLintTool">
            <argument type="service" id="phplint.tool.executor"/>
        </service>
        <service id="phplint.tool.executor" class="Module\PhpLint\Service\PhpLintToolExecutor">
            <argument type="service" id="phplint.tool.processor"/>
            <argument type="service" id="console.output"/>
        </service>
    </services>
</container>