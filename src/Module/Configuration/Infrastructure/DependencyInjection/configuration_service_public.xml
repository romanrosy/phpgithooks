<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="configuration.processor.command.handler" class="Module\Configuration\Contract\CommandHandler\ConfigurationProcessorCommandHandler">
            <argument type="service" id="configuration.processor"/>
            <tag name="command_handler" handles="\Module\Configuration\Contract\Command\ConfigurationProcessorCommand"/>
        </service>
        <service id="configuration.data.finder.query.handler" class="Module\Configuration\Contract\QueryHandler\ConfigurationDataFinderQueryHandler">
            <argument type="service" id="configuration.data.finder" />
            <tag name="command_handler" handles="" />
        </service>
    </services>
</container>