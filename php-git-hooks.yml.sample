pre-commit:
  enabled: true
  execute:
    php-cs-fixer:
        enabled:    true
        levels:
            psr0:     true
            psr1:     true
            psr2:     true
            symfony:  true

    phpunit:
        enabled:        true
        random-mode:    true
    phplint:       true
    phpcs:         true
    phpmd:         true
commit-msg:
    enabled:       true
    regular-expression: '#[0-9]{2,7}'
